model Client {
  id         String   @id
  document   String   @unique
  phone      String
  email      String   @unique
  name       String
  password   String
  address    Address  @relation(fields: [addressId], references: [id])
  addressId  String   @unique
  orders     Order[]
  created_at DateTime

  @@map("clients")
}

model Address {
  id      String  @id
  street  String
  number  Int
  zipCode String
  client  Client?
}

model Product {
  id               String         @id
  code             String         @unique
  name             String
  category         String
  price            Float
  promotionalPrice Float?
  stockQuantity    Int
  orderProducts    OrderProduct[]

  @@map("products")
}

model Order {
  id            String         @id
  client        Client         @relation(fields: [clientId], references: [id])
  clientId      String
  orderProducts OrderProduct[]
  totalAmount   Float
  notes         String?
  discountCode  Coupon?        @relation(fields: [couponId], references: [id])
  couponId      String?

  @@map("orders")
}

model OrderProduct {
  id        String  @id
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int

  @@map("orders_products")
}

model Coupon {
  id                 String   @id
  code               String   @unique
  discountPercentage Float
  expirationDate     DateTime
  usageLimit         Int
  orders             Order[]

  @@map("coupons")
}
